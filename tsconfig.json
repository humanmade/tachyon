{
	"compilerOptions": {
		"target": "es2022",
		"strict": true,
		"preserveConstEnums": true,
		"noEmit": false,
		"sourceMap": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"outDir": "./dist",
		"types": ["node"],
	},
	"exclude": ["node_modules", "**/*.test.ts"],
	"include": ["./src/**/*.ts", "./*.d.ts", "./tests/**/*.ts"],
}
